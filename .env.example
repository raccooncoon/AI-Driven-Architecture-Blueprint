# Database Configuration
# 운영 DB 주소 (예: 192.168.0.100, host.docker.internal)
SPRING_DATASOURCE_URL=jdbc:postgresql://host.docker.internal:5432/adab_db
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=secure_password_here

# Ollama AI Configuration
# 운영 Ollama 주소 (예: http://192.168.0.101:11434)
SPRING_AI_OLLAMA_BASE_URL=http://host.docker.internal:11434
# 사용할 AI 모델명
SPRING_AI_OLLAMA_CHAT_OPTIONS_MODEL=gemma3:12b

# Redis Configuration (Optional)
SPRING_DATA_REDIS_HOST=host.docker.internal
SPRING_DATA_REDIS_PORT=6379

# Application Settings
# Spring Profile (운영 환경: prod)
SPRING_PROFILES_ACTIVE=prod
